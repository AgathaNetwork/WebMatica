<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebMatica</title>
    <!-- 引入 Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: white; /* 浅蓝色背景 */
        }
        .navbar {
            background-color: #e6f7ff; /* 深蓝色导航栏 */
        }
        .navbar-brand {
            color: black !important;
        }
        .container {
            margin-top: 50px;
        }
        .loading-container {
            display: flex;
            align-items: center; /* 垂直居中对齐 */
            justify-content: center; /* 水平居中对齐 */
            gap: 10px; /* 标志和文字之间的间距 */
        }
        .status-text {
            font-size: 1.5rem;
            color: black; /* 深蓝色文字 */
        }
        .status-container {
            display: flex;
            align-items: center; /* 垂直居中对齐 */
            justify-content: center; /* 水平居中对齐 */
        }
    </style>
</head>
<body onload="App.AwaitStatus();">
    <!-- 导航栏 -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">WebMatica</a>
        </div>
    </nav>

    <!-- 主内容 -->
    <!-- 选项卡导航 -->
    <div class="container mt-2">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-controls="tab1" aria-selected="true">分选区</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab" aria-controls="tab2" aria-selected="false">按文件</button>
            </li>
        </ul>
    
        <!-- 选项卡内容 -->
        <div class="tab-content mt-1" id="myTabContent">
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                <div class="container" style="margin-top:1rem" id="containerDiv">
                </div>
            </div>
            <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                <div class="container" style="margin-top:1rem" id="widgetDiv">
                </div>
                <div class="container" style="margin-top:1rem" id="sumList">
                    
                </div>
            </div>
        </div>
        
            
        </div>

    <!-- 引入 Bootstrap JS 和依赖 -->
    <script src="js/bootstrap.min.js"></script>
    <!--  -->
    <script type="importmap">
        
        {
            "imports": {
              "three": "/js/Three.js",
              "three/controls/OrbitControls": "/js/OrbitControls.js",
              "three/loaders/GLTFLoader": "/js/GLTFLoader.js"
            }
          }
    </script>
    <script type="module" src="js/detail.js"></script>
</body>
</html>